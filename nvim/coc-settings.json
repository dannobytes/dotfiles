{
  "Lua.diagnostics.globals": ["vim"],

  // Code lens settings
  "codeLens.enable": false,
  "codeLens.display": true,
  "codeLens.position": "eol",
  "typescript.referencesCodeLens.enabled": true,
  "typescript.implementationsCodeLens.enabled": false,

  // Formatting
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "eslint.autoFixOnSave": true,
  "eslint.codeActionsOnSave.mode": "all",
  "prettier.tabWidth": 2,
  "prettier.enable": true,
  "prettier.singleQuote": true,
  "prettier.useTabs": false,
  "prettier.printWidth": 80,
  "prettier.semi": true,

  // General
  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnType": false,
  "diagnostic.floatConfig": {
    "border": true,
    "rounded": true,
    "title": " üôä"
  },
  "diagnostic.errorSign": "üí•",
  "diagnostic.infoSign": "‚ùî",
  "diagnostic.warningSign": "‚ö†Ô∏è",
  "hover.floatConfig": {
    "border": true,
    "rounded": true,
    "title": " ‚Ñπ"
  },
  "suggest.floatConfig": {
    "border": true,
    "rounded": true
  },
  "suggest.minTriggerInputLength": 3,
  "suggest.noselect": false,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.removeDuplicateItems": true,
  "suggest.triggerAfterInsertEnter": true,

  // Stylelint settings
  "stylelintplus.autoFixOnFormat": true,
  "stylelintplus.autoFixOnSave": true,
  "stylelintplus.enable": true,
  "stylelintplus.validateOnSave": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // Use local TS version instead of deafult.
  "tsserver.useLocalTsdk": true,
  "tsserver.tsdk": "${workspaceFolder}/node_modules/typescript/lib",
  "snippets.ultisnips.pythonPrompt": false
}
