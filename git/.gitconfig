[core]
  editor = vim
  excludesfile = ~/.gitignore
[push]
  followTags = true
[pull]
  rebase = true
  all = true
[alias]
  addp = add -p
  br = branch
  ci = commit -v
  cia = commit -v --amend
  cianoe = commit --amend --no-edit
  co = checkout
  diffs = diff --staged
  dt = difftool
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  logl = log --oneline
  logp = log -p
  logs = log --stat
  mt = mergetool --no-prompt
  pushf= push --force-with-lease
  re = rebase
  re1 = rebase -i HEAD~1
  re2 = rebase -i HEAD~2
  re3 = rebase -i HEAD~3
  re4 = rebase -i HEAD~4
  re5 = rebase -i HEAD~5
  re6 = rebase -i HEAD~6
  re7 = rebase -i HEAD~7
  re8 = rebase -i HEAD~8
  re9 = rebase -i HEAD~9
  re10 = rebase -i HEAD~10
  reom = rebase origin/master
  recont = rebase --continue
  resetom = reset --hard origin/master
  sh = stash
  shls = stash list
  st = status
[merge]
  conflictstyle = diff3
  ff = false
  tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd = vimdiff -f "$LOCAL" "$MERGED" "$REMOTE"
[status]
  showStash = false
[stash]
  showPatch = true
[commit]
  gpgsign = true
[rebase]
  autoStash = true
