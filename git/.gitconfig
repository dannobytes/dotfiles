[alias]
  addp = add -p
  br = branch -v
  brgone = "!git branch -v | grep gone"
  brprune = "!git branch -v | grep gone | awk '{print $1}' | xargs git branch -D"
  ch = cherry-pick
  ci = commit
  cia = commit --amend
  cianoe = commit --amend --no-edit
  co = checkout
  diffs = diff --staged
  dt = difftool
  fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  logl = log --oneline
  logp = log -p
  logs = log --stat
  mr = merge
  mrbort = merge --abort
  mrcont = merge --continue
  mrom = merge origin/main
  mron = merge origin/next
  mt = mergetool
  pu = pull --prune
  pushf= push --force-with-lease
  re = rebase
  re1 = rebase -i HEAD~1
  re10 = rebase -i HEAD~10
  re2 = rebase -i HEAD~2
  re3 = rebase -i HEAD~3
  re4 = rebase -i HEAD~4
  re5 = rebase -i HEAD~5
  re6 = rebase -i HEAD~6
  re7 = rebase -i HEAD~7
  re8 = rebase -i HEAD~8
  re9 = rebase -i HEAD~9
  rebort = rebase --abort
  recont = rebase --continue
  reom = rebase origin/main
  reomr = rebase origin/master
  reon = rebase origin/next
  rs = reset
  rs1 = reset HEAD~
  rs2 = reset HEAD~2
  rs3 = reset HEAD~3
  rs4 = reset HEAD~4
  rs5 = reset HEAD~5
  rs6 = reset HEAD~6
  rs7 = reset HEAD~7
  rs8 = reset HEAD~8
  rs9 = reset HEAD~9
  rsom = reset --hard origin/main
  rsomr = reset --hard origin/master
  rson = reset --hard origin/next
  sh = stash
  shls = stash list
  st = status
  wt = worktree
[commit]
  gpgSign = true
  verbose = true
[core]
  editor = vim
  excludesfile = ~/.gitignore
[diff]
  context = 5
[init]
  defaultBranch = main
[merge]
  conflictstyle = merge
  ff = false
  tool = nvimdiff
[mergetool]
  keepBackup = false
  prompt = true
[mergetool.vimdiff]
  # layout = "MERGED,(LOCAL/BASE/REMOTE)"
  layout = MERGED
[pager]
  branch = false
  stash = false
[pull]
  rebase = true
  all = true
[push]
  followTags = true
  useForceIfIncludes = true
[rebase]
  autoStash = true
  autoSquash = true
[stash]
  showPatch = true
  showStat = true
[status]
  showStash = false
